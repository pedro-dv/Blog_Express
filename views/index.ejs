<%- include ('./partials/header.ejs') %>
<%- include ('./partials/navbarHome.ejs') %>

    <body>
        <div class="container">
            <div class="jumbotron text-center bg-light p-5 rounded">
                <h1 class="display-4 font-weight-bold">Bem-vindo ao BlogExpress!</h1>
                <p class="lead mt-3">
                    BlogExpress é uma plataforma full-stack com um painel administrativo completo para gestão de blogs.
                </p>
                <hr class="my-4">
                <p class="text-muted">
                    Explore nossas ferramentas poderosas e torne a criação de conteúdo ainda mais simples e eficiente.
                </p>
                <a href="/explore" class="btn btn-primary btn-lg mt-3" role="button">Comece agora</a>
            </div>
            

            <% articles.forEach((article) => { %>
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0"><%= article.title %></h2>
                    </div>
            
                    <div class="card-body">
                        <p class="card-text text-muted">
                            <%= article.summary %> <!-- Adicione um resumo do artigo, se disponível -->
                        </p>
                        <a href="/<%= article.slug %>" class="btn btn-success">Ler mais</a>
                    </div>
            
                    <div class="card-footer text-muted">
                        Publicado em: <%= new Date(article.date).toLocaleDateString() %>
                    </div>
                </div>
            <% }) %>
            
        </div>
    </body>

<%- include ('./partials/footer.ejs') %>
